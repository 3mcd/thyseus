{
	"name": "thyseus",
	"version": "0.1.0",
	"description": "A multithreaded, DX-focused Typescript ECS",
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/thyseus.umd.cjs",
	"module": "./dist/thyseus.js",
	"types": "./dist/thyseus.d.ts",
	"exports": {
		".": {
			"import": "./dist/thyseus.js",
			"require": "./dist/thyseus.umd.cjs"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/JaimeGensler/thyseus"
	},
	"scripts": {
		"start": "vite",
		"build": "vite build && dts-bundle-generator ./src/index.ts -o ./dist/thyseus.d.ts --no-check --export-referenced-types=false",
		"test": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"keywords": [
		"ecs",
		"entity component system",
		"multithreaded",
		"typescript",
		"multithreading"
	],
	"author": "Jaime Gensler",
	"license": "MIT",
	"devDependencies": {
		"@vitest/web-worker": "^0.18.1",
		"c8": "^7.12.0",
		"dts-bundle-generator": "^6.12.0",
		"typescript": "^4.7.4",
		"vite": "^3.0.3",
		"vitest": "^0.19.1"
	}
}
