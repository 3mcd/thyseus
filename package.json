{
	"name": "thyseus",
	"version": "0.3.0",
	"description": "An archetypal Entity Component System for the modern web.",
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/thyseus.umd.cjs",
	"module": "./dist/thyseus.js",
	"types": "./dist/thyseus.d.ts",
	"exports": {
		".": {
			"import": "./dist/thyseus.js",
			"require": "./dist/thyseus.umd.cjs"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/JaimeGensler/thyseus"
	},
	"scripts": {
		"start": "vite",
		"build": "vite build && dts-bundle-generator ./src/index.ts -o ./dist/thyseus.d.ts --no-check --export-referenced-types=false",
		"test": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"keywords": [
		"ecs",
		"entity component system",
		"typescript",
		"game engine",
		"game dev",
		"thread",
		"multithreaded",
		"multithreading",
		"archetype",
		"table"
	],
	"author": "Jaime Gensler",
	"license": "MIT",
	"devDependencies": {
		"@vitest/coverage-c8": "^0.23.4",
		"@vitest/web-worker": "^0.23.4",
		"dts-bundle-generator": "^6.13.0",
		"typescript": "^4.8.3",
		"vite": "^3.1.3",
		"vitest": "^0.23.4"
	}
}
